.secretaria-consultas
  height: 30em
  &-container
    height 15em
    background: #CCCCCC;
    border-radius: 10px;
    form
      width: 100%
      button
        width: 9em;
        border: 0;
        background: #C38B8F;
        padding: .5em;
        color: white;
        border-bottom: 6px solid #B97777;
        border-radius: 2px;
        cursor: pointer;
      .form-container
          display flex
        .form-container-label
          width 5em
          text-align end
          margin-right 2em
          margin-bottom 1em
        .form-container-input
          input, select
            width 8em
        h3
          text-align: center;
          padding: 1em 0